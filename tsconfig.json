{
  "compilerOptions": {
    "outDir": "js",
    "baseUrl": ".",
    "target": "es6",
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom"
    ],
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true
  },
  "typedocOptions": {
    "entryPoints": [
      "ts/api",
      "ts/def"
    ],
    "entryPointStrategy": "expand",
    "plugin": [
      "typedoc-plugin-markdown"
    ],
    "theme": "./node_modules/typedoc-github-wiki-theme/dist",
    "readme": "none",
    "excludeProtected": "true",
    "out": "doc",
    "sort": "source-order",
    "hideGenerator": "true"
  },
  "include": [
    "ts/**/*"
  ]
}