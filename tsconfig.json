{
  "compilerOptions": {
    "outDir": "js",
    "baseUrl": ".",
    "target": "es6",
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom"
    ],
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true
  },
  "typedocOptions": {
    "entryPoints": "ts/nim.ts",
    "out": "doc",
    "hideGenerator": "true"
  },
  "include": [
    "ts/**/*"
  ]
}