{
  "name": "node-nim",
  "version": "0.2.0",
  "description": "NetEase IM nodejs wrapper based on NetEase IM C++ SDK",
  "main": "js/nim.js",
  "types": "types/nim.d.ts",
  "author": "Dylan",
  "license": "ISC",
  "scripts": {
    "test": "mocha test/test_all.js -slow 200 -timeout 10000",
    "coverage": "nyc --reporter=clover npm run test",
    "install": "just install && typedoc",
    "build:ts": "rimraf ./js && rimraf ./types && tsc",
    "build:doc": "typedoc",
    "prepare": "npm run build:ts"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "download": "^8.0.0",
    "extract-zip": "^2.0.1",
    "just-scripts": "^1.5.6",
    "node-gyp": "^8.1.0",
    "shelljs": "^0.8.4",
    "tar": "^6.1.0"
  },
  "devDependencies": {
    "eslint": "^7.31.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "mocha": "^9.1.1",
    "nyc": "^15.1.0",
    "typedoc": "^0.21.6",
    "typescript": "^4.3.5",
    "typescript-eslint": "0.0.1-alpha.0"
  },
  "keywords": [
    "netease",
    "nim",
    "chatroom",
    "im sdk",
    "nim sdk",
    "nim node",
    "nim electron"
  ],
  "files": [
    "scripts/",
    "src/",
    "test/",
    "js/",
    "types/",
    ".clang-format",
    "binding.gyp",
    "config_dts.json",
    "config_ts.json",
    "cpplint.cfg",
    "just-task.js",
    "package.json",
    "README.md"
  ]
}