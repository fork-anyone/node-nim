{
    "name": "node-nim",
    "version": "0.0.0",
    "description": "NetEase IM nodejs wrapper based on NetEase IM C++ SDK",
    "main": "dist/node-nim.js",
    "types": "types/node-nim.d.ts",
    "author": "Netease",
    "license": "ISC",
    "homepage": "https://github.com/netease-im/node-nim",
    "repository": {
        "type": "git",
        "url": "git://github.com/netease-im/node-nim.git"
    },
    "scripts": {
        "coverage": "nyc mocha test/test_all.js -slow 200 -timeout 10000",
        "build_ts": "rimraf ./js && rimraf ./types && tsc",
        "build_doc": "typedoc",
        "prepublishOnly": "npm run build_ts",
        "install": "npm run download_sdk",
        "download_sdk": "node script/download-sdk.mjs"
    },
    "nyc": {
        "cache": false,
        "reporter": [
            "lcov"
        ]
    },
    "dependencies": {
        "compare-versions": "^4.1.3",
        "download": "^8.0.0",
        "node-fetch": "^2.6.5"
    },
    "devDependencies": {
        "@types/node": "^16.10.5",
        "@typescript-eslint/eslint-plugin": "^5.17.0",
        "@typescript-eslint/parser": "^5.17.0",
        "bluebird": "^3.7.2",
        "cmake-js": "^6.3.0",
        "eslint": "^7.32.0",
        "git-describe": "^4.1.0",
        "mocha": "^9.1.1",
        "node-addon-api": "^4.3.0",
        "nyc": "^15.1.0",
        "typedoc": "^0.23.6",
        "typedoc-github-wiki-theme": "^1.0.1",
        "typedoc-plugin-markdown": "^3.13.3",
        "typescript": "^4.3.5"
    },
    "keywords": [
        "netease",
        "nim",
        "im sdk",
        "nim sdk",
        "nim node",
        "nim electron"
    ],
    "files": [
        "dist/",
        "types/",
        "package.json",
        "script/"
    ]
}
